.modal.fade(
	id = "alertModal"
	tabindex = "-1"
	role = "dialog"
	aria-labelledby = "basicModal"
	aria-hidden = "true"
)
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
				h4.modal-title
			.modal-body
			.modal-footer
				button.btn.btn-default(type="button" data-dismiss="modal")= local.close
